<!-- app/views/patient_portal/sessions/new.html.erb -->
<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h2>Patient Portal Login</h2>
      </div>
      <div class="card-body">
        <%= form_with(url: patient_portal_login_path, method: :post, local: true) do |f| %>
          <div class="form-group mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, class: "form-control", required: true %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, class: "form-control", required: true %>
          </div>

          <div class="form-group">
            <%= f.submit "Log In", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
      <div class="card-footer text-center">
        <p>Don't have an account? <%= link_to "Sign Up", patient_portal_signup_path %></p>
      </div>
    </div>
  </div>
</div>